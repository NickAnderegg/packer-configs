{
    "variables": {
        "os_version": "10",
        "disk_size": "16384",
        "memory": "2048",
        "cpus": "2",
        "partman_file": "disk-16G"
    },
    "builders": [
        {
            "vm_name": "debian-{{ user `os_version` }}-vbox-amd64-base",
            "output_directory": "output-virtualbox",
            "type": "virtualbox-iso",
            "format": "ova",
            "guest_os_type": "Debian_64",
            "guest_additions_mode": "disable",
            "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.1.0-amd64-netinst.iso",
            "iso_checksum": "7915fdb77a0c2623b4481fc5f0a8052330defe1cde1e0834ff233818dc6f301e",
            "iso_checksum_type": "sha256",

            "disk_size": "{{ user `disk_size` }}",
            "hard_drive_interface": "sata",
            "hard_drive_discard": true,
            "hard_drive_nonrotational": true,

            "http_directory": "./http/debian",
            "boot_wait": "5s",
            "boot_command": [
                "<esc><wait>",
                "install",
                " auto",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-{{ user `os_version` }}-bare.cfg",
                " debian-installer=en_US",
                " locale=en_US",
                " keymap=us",
                " netcfg/get_hostname={{ .Name }}",
                " netcfg/get_domain=unconfigured.local",
                " kbd-chooser/method=us",
                " console-setup/ask_detect=false",
                " console-keymaps-at/keymap=us",
                " keyboard-configuration/xkb-keymap=us",
                " fb=false",
                " grub-installer/bootdev=/dev/sda",
                " <enter><wait>"
            ],

            "ssh_timeout": "30m",
            "ssh_username": "debian",
            "ssh_password": "debian",

            "shutdown_command": "echo 'debian' | sudo -S systemctl poweroff",

            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
                ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"],
                ["setextradata", "{{.Name}}", "GUI/ScaleFactor", 3]
    		]
        },
        {
            "vm_name": "debian-{{ user `os_version` }}-kvm-amd64-base",
            "output_directory": "output-qemu",
            "type": "qemu",
            "format": "qcow2",
            "accelerator": "kvm",
            "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.1.0-amd64-netinst.iso",
            "iso_checksum": "7915fdb77a0c2623b4481fc5f0a8052330defe1cde1e0834ff233818dc6f301e",
            "iso_checksum_type": "sha256",

            "disk_size": "{{ user `disk_size` }}",
            "disk_compression": true,
            "disk_interface": "virtio-scsi",
            "disk_discard": "unmap",
            "disk_detect_zeroes": "on",

            "cpus": "{{ user `cpus` }}",
            "memory": "{{ user `memory` }}",

            "headless": true,
            "vnc_bind_address": "0.0.0.0",

            "http_directory": "./http/debian",
            "boot_wait": "20s",
            "boot_command": [
                "<esc><wait>",
                "install",
                " auto",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-{{ user `os_version` }}-bare.cfg",
                " debian-installer=en_US",
                " locale=en_US",
                " keymap=us",
                " netcfg/get_hostname={{ .Name }}",
                " netcfg/get_domain=unconfigured.local",
                " kbd-chooser/method=us",
                " console-setup/ask_detect=false",
                " console-keymaps-at/keymap=us",
                " keyboard-configuration/xkb-keymap=us",
                " fb=false",
                " grub-installer/bootdev=/dev/sda",
                " <enter><wait>"
            ],

            "ssh_timeout": "30m",
            "ssh_username": "debian",
            "ssh_password": "debian",

            "shutdown_command": "echo 'debian' | sudo -S systemctl poweroff"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "output-vagrant/debian-{{ user `os_version` }}-{{.Provider}}-base.box",
            "keep_input_artifact": true
        }
    ]
}
